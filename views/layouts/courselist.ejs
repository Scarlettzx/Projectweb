<%- include('../includes/head.ejs') -%>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="/css/main.css">
    </head>

    <body>
        <%- include('../includes/navigationbar.ejs') -%>
            </header>
            <div class="container">
                <table class="table table-striped table-sm table-hover table-borderless" id="myTable">
                    <thead class=" table-info">
                        <tr>
                            <th scope="col" style="width: 58px"> รหัสวิชา</th>
                            <th scope="col" style="width: 233px"> ชื่อวิชา(ภาษาไทย)</th>
                            <th scope="col" style="width: 278px"> ชื่อวิชา(ภาษาอังกฤษ)</th>
                            <th scope="col" style="width: 55px"> หน่วยกิต</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% Object.values(courses).forEach((course)=>{%>
                            <tr>
                                <td scope="row">
                                    <a class="course-id" href="/courses/cs<%=course.id%>">
                                        <%=course.id%>
                                    </a>
                                </td>
                                <td scope="row">
                                    <%=course.thai%>
                                </td>
                                <td scope="row">
                                    <%=course.eng%>
                                </td>
                                <td scope="row">
                                    <%=course.credit%>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
    </body>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                paging: false,
            });
            $(".dataTables_length").hide();
        });
    </script>

    </html>