<%- include('../includes/head.ejs') -%>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <link rel="stylesheet" href="/css/main.css">
    </head>

    <body>
        <%- include('../includes/navigationbar.ejs') -%>
            </header>
            <%if(messages.error){%>
                <div class="alert alert-danger" role="alert">
                    <%=messages.error%>
                </div>
                <%}%>
                    <%if(messages.success){%>
                        <div class="alert alert-success" role="alert">
                            <%=messages.success%>
                        </div>
                        <%}%>
                            <div class="container pt-5 p-5 my-5" style="margin-top: 50px">
                                <div class="card">
                                    <div class="card-header">
                                        Add Staff
                                    </div>
                                    <div class="card-body">
                                        <form action="/admin/add-staff" method="post" enctype="multipart/form-data">
                                            <div class="form-group">
                                                <label>รหัสอาจารย์:</label>
                                                <input type="text" class="form-control" name="id" autocomplete="off">
                                            </div>
                                            <div class="form-group">
                                                <label>ชื่อไทย:</label>
                                                <input type="text" class="form-control" name="nameThai"
                                                    autocomplete="off">
                                            </div>
                                            <div class="form-group">
                                                <label>ชื่ออังกฤษ:</label>
                                                <input type="text" class="form-control" name="nameEng"
                                                    autocomplete="off">
                                            </div>
                                            <div class="form-group">
                                                <label>ห้องทำงาน:</label>
                                                <input type="text" class="form-control" name="office"
                                                    autocomplete="off">
                                            </div>
                                            <div class="form-group">
                                                <label>อีเมล:</label>
                                                <input type="text" class="form-control" name="email">
                                            </div><br>
                                            <div class="form-group">
                                                <label for="fileupload" class="form-label">Upload Photograph</label>
                                                <input type="file" class="form-control" name="fileupload"
                                                    id="fileupload" multiple>
                                            </div><br>
                                            <div class="form-group">
                                                <input type="submit" class="btn btn-info" value="Add">
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
    </body>

    </html>